{
  "name": "applicationapp",
  "version": "1.0.0",
  "description": "create your personal view of applications for jobs",
  "main": "dist/index.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" --fix",
    "prepare": "husky",
    "a11y:run": "pa11y-ci --config .pa11yci.json",
    "a11y": "concurrently -n SERVER,A11Y -c cyan,magenta \"pnpm dev\" \"pnpm a11y:run\"",
    "icons": "node scripts/create-favicons.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "clean": "rimraf dist",
    "build:assets": "node scripts/copy-assets.mjs",
    "build:client": "node scripts/build-client.mjs",
    "build:css": "node scripts/build-css.mjs",
    "build:server": "node scripts/build-server.mjs",
    "build:single": "node scripts/make-single-html.mjs",
    "build": "pnpm clean && pnpm build:assets && pnpm build:client && pnpm build:css && pnpm build:server && pnpm build:single",
    "start": "node dist/server.cjs"
  },
  "author": "wieerwill",
  "license": "ISC",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,css,md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "better-sqlite3": "12.2.0",
    "cheerio": "^1.1.2",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "express": "5.1.0",
    "express-session": "1.18.2",
    "marked": "^16.4.2",
    "method-override": "^3.0.0",
    "morgan": "1.10.1",
    "pug": "3.0.3",
    "sanitize-html": "^2.17.0",
    "undici": "^7.16.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.10",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.5",
    "@types/method-override": "^3.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "24.3.1",
    "@types/pug": "^2.0.10",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cssnano": "^7.1.2",
    "esbuild": "^0.25.12",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "3.6.2",
    "puppeteer": "^24.30.0",
    "rimraf": "^6.1.2",
    "sharp": "^0.34.5",
    "supertest": "^7.1.4",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.20.6",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}
