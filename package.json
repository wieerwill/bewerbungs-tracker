{
  "name": "applicationapp",
  "version": "1.0.0",
  "description": "create your personal view of applications for jobs",
  "main": "dist/index.ts",
  "type": "commonjs",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "start": "NODE_ENV=production tsx watch dist/index.js",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" --fix",
    "prepare": "husky",
    "a11y": "pa11y-ci",
    "icons": "node scripts/create-favicons.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage"
  },
  "author": "wieerwill",
  "license": "ISC",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,css,md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "better-sqlite3": "12.2.0",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "express": "5.1.0",
    "express-session": "1.18.2",
    "marked": "^16.2.1",
    "method-override": "^3.0.0",
    "morgan": "1.10.1",
    "pug": "3.0.3",
    "sanitize-html": "^2.17.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.3",
    "@types/method-override": "^3.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "24.3.1",
    "@types/pug": "^2.0.10",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pa11y-ci": "^4.0.1",
    "prettier": "3.6.2",
    "sharp": "^0.34.3",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.20.5",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}
